<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="shoe"
            type="com.lhmzhou.databindingDemo.data.ShoeEntry"/>

        <variable
            name="shoeItemClick"
            type="com.lhmzhou.databindingDemo.ui.ShoeAdapter.ShoeClickListener"/>

        <import type="com.lhmzhou.databindingDemo.utils.BindingUtils"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:onClick="@{() ->  shoeItemClick.onShoeClicked(shoe)}">

        <TextView
                android:id="@+id/item_shoe_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:fontFamily="sans-serif-medium"
                android:text="@{shoe.shoeName}"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintEnd_toStartOf="@+id/item_state_drawable"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Teddy Bear" />

        <TextView
                android:id="@+id/item_categories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@{BindingUtils.attachCategories(shoe.categories)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_state_drawable"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_shoe_name"
                tools:text="Plush" />

        <ImageView
                android:id="@+id/item_gender_drawable"
                android:layout_width="@dimen/gender_image_width"
                android:layout_height="@dimen/gender_image_height"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/cd_item_gender"
                app:genderDrawable="@{shoe.gender}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_men" />

        <ImageView
                android:id="@+id/item_state_drawable"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/margin_small"
                android:padding="@dimen/padding_small"
                android:contentDescription="@string/cd_state_symbol"
                app:layout_constraintBottom_toBottomOf="@+id/item_gender_drawable"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintEnd_toStartOf="@+id/item_gender_drawable"
                app:layout_constraintTop_toTopOf="@+id/item_gender_drawable"
                app:stateDrawable="@{shoe.procurementType}"
                tools:srcCompat="@drawable/ic_gift" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>